<Window x:Class="General.GeneralGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:General"
        mc:Ignorable="d"
        Title="General" Height="450" Width="800">
    <Grid>

        

        <ScrollViewer Margin="67,99,561,67">
            <ListBox x:Name="listBoxData" IsHitTestVisible="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- Column definitions for key and value -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Key -->
                            <TextBlock Text="{Binding Key, StringFormat={}{0}:}" Grid.Column="0" Margin="5"/>

                            <!-- Value -->
                            <TextBlock Text="{Binding Value}" Grid.Column="1" Margin="5"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Left" Margin="133,388,0,0" VerticalAlignment="Top" Height="20" Width="40" Click="LoadButton_Click"/>

        <Image x:Name="logoGeneral" HorizontalAlignment="Left" Height="64" Margin="10,10,0,0" VerticalAlignment="Top" Width="119" Source="/clipart16522.png"/>

    </Grid>
</Window>
